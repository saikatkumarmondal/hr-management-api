{
  "info": {
    "name": "HR Management API",
    "description": "Complete HR API with Authentication, Employees, Attendance, and Reports",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@hr.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Employees",
      "item": [
        {
          "name": "Get All Employees",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/employees?page=1&limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["employees"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Employee by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/employees/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["employees", "1"]
            }
          }
        },
        {
          "name": "Create Employee (without photo)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"rahim@example.com\",\n  \"name\": \"Rahim Uddin\",\n  \"age\": 30,\n  \"designation\": \"Software Engineer\",\n  \"hiring_date\": \"2024-08-01\",\n  \"date_of_birth\": \"1994-03-15\",\n  \"salary\": 45000\n}"
            },
            "url": {
              "raw": "http://localhost:5000/employees",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["employees"]
            }
          }
        },
        {
          "name": "Create Employee (with photo_base64)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"rahim@example.com\",\n  \"name\": \"Rahim Uddin\",\n  \"age\": 30,\n  \"designation\": \"Software Engineer\",\n  \"hiring_date\": \"2024-08-01\",\n  \"date_of_birth\": \"1994-03-15\",\n  \"salary\": 45000,\n  \"photo_base64\": \"data:image/jpeg;base64,\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/employees",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["employees"]
            }
          }
        },
        {
          "name": "Update Employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Rahim Uddin Updated\",\n  \"designation\": \"Senior Engineer\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/employees/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["employees", "1"]
            }
          }
        },
        {
          "name": "Delete Employee",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/employees/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["employees", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Get All Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/attendance?page=1&limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["attendance"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Attendance by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/attendance/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["attendance", "1"]
            }
          }
        },
        {
          "name": "Record/Upsert Attendance",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employee_id\": 1,\n  \"date\": \"2025-08-12\",\n  \"check_in_time\": \"09:30:00\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/attendance",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["attendance"]
            }
          }
        },
        {
          "name": "Update Attendance",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"check_in_time\": \"09:50:00\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/attendance/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["attendance", "1"]
            }
          }
        },
        {
          "name": "Delete Attendance",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/attendance/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["attendance", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Monthly Attendance Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/reports/attendance?month=2025-08",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["reports", "attendance"],
              "query": [
                {
                  "key": "month",
                  "value": "2025-08"
                }
              ]
            }
          }
        },
        {
          "name": "Monthly Report for Specific Employee",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/reports/attendance?month=2025-08&employee_id=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["reports", "attendance"],
              "query": [
                {
                  "key": "month",
                  "value": "2025-08"
                },
                {
                  "key": "employee_id",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ]
}
