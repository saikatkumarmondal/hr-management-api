# ============================================================================
# HR Management API - Environment Variables
# ============================================================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to git (it's in .gitignore)
# ============================================================================

# ============================================================================
# 1. SERVER CONFIGURATION
# ============================================================================

# Server port (default: 5000)
PORT=5000

# Node environment (development, production, staging)
NODE_ENV=development

# ============================================================================
# 2. DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Complete Connection URL (highest priority)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/hr_management

# OR individual database credentials (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=hr_management

# Database pool settings (optional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# 3. JWT AUTHENTICATION
# ============================================================================

# JWT Secret Key (minimum 32 characters, use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_here_12345

# JWT Token expiration time
# Options: '1h', '24h', '7d', '30d', etc.
JWT_EXPIRE=7d

# ============================================================================
# 4. FILE UPLOAD CONFIGURATION
# ============================================================================

# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880

# Allowed MIME types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Upload directory path
UPLOAD_DIR=uploads

# ============================================================================
# 5. LOGGING & DEBUGGING
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode (true/false)
DEBUG=false

# ============================================================================
# 6. CORS CONFIGURATION (Optional)
# ============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================================================
# 7. EMAIL CONFIGURATION (Optional - for future use)
# ============================================================================

# Email service (if implementing email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ============================================================================
# 8. EXTERNAL SERVICES (Optional)
# ============================================================================

# S3/Cloud storage for photo uploads
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=your_bucket_name

# ============================================================================
# NOTES:
# ============================================================================
# 1. Database URL Format (PostgreSQL):
#    postgresql://username:password@host:port/database
#    Example: postgresql://postgres:mypass@localhost:5432/hr_management
#
# 2. For Neon DB (cloud PostgreSQL):
#    DATABASE_URL=postgresql://user:password@ep-xxxx.region.aws.neon.tech/dbname?sslmode=require
#
# 3. For local development with default PostgreSQL:
#    DB_HOST=localhost
#    DB_PORT=5432
#    DB_USER=postgres
#    DB_PASSWORD=postgres
#    DB_NAME=hr_management
#
# 4. JWT_SECRET should be unique and random:
#    Generate with: openssl rand -hex 32
#    Or: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# 5. File upload MAX_FILE_SIZE:
#    1MB = 1048576
#    5MB = 5242880
#    10MB = 10485760
#
# 6. Available LOG_LEVELS:
#    - error: Only error logs
#    - warn: Warnings and errors
#    - info: Info, warnings, and errors
#    - debug: All logs including debug
#
# 7. NODE_ENV values:
#    - development: Full logging, source maps
#    - production: Minimal logging, optimized
#    - staging: Production-like with extended logging
# ============================================================================
